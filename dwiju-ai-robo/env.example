# Environment Variables for Dwiju AI Robo
# Copy this file to .env.local and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dwiju-ai-robo
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dwiju-ai-robo

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Google Cloud APIs (Optional)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Voice & TTS Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# External APIs
YOUTUBE_API_KEY=your_youtube_data_api_key
OPENWEATHERMAP_API_KEY=your_openweather_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Hardware Integration
RASPBERRY_PI_STREAM_URL=ws://your-pi-ip:8765
ARDUINO_SERIAL_PORT=/dev/ttyUSB0

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://dwiju.ai
CORS_CREDENTIALS=true

# Admin Configuration
ADMIN_EMAIL=admin@dwiju.ai
ADMIN_PASSWORD=your_secure_admin_password

# Feature Management
FEATURES_IMPORT_KEY=secure_key_for_feature_imports
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# Development/Production
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# SSL Configuration (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain

# WebRTC Configuration
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,gu,hi,es,fr,de,it,pt,ru,ja,ko,zh

# Performance
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=50

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
CSRF_SECRET=your_csrf_secret_here
SESSION_SECRET=your_session_secret_here

# Deployment
VERCEL_URL=https://your-app.vercel.app
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dwiju-uploads

# Domain & SSL
DOMAIN=dwiju.ai
SUBDOMAIN=www
FORCE_HTTPS=true
